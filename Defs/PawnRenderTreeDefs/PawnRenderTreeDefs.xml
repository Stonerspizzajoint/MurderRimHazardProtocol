<!-- The Scrap-Bug Render Tree -->
  <PawnRenderTreeDef>
    <defName>MRHP_ScrapBugRender</defName>
    <root Class="PawnRenderNodeProperties_Parent">
      <debugLabel>Root</debugLabel>
      <tagDef>Root</tagDef>
      <children>
        <li Class="VEF.Graphics.PawnRenderNodeProperties_Omni">
            <debugLabel>Lights</debugLabel>
            <nodeClass>VEF.Graphics.PawnRenderNode_Omni</nodeClass>
            <overlayLayer>Body</overlayLayer>
            <skipFlag>Body</skipFlag>
            <conditionalGraphics>
                <!--Lights-->
                <shader>TransparentPostLight</shader>
                <colorA>
                    <taggedColor>MRHP_LightColor</taggedColor>
                </colorA>
                <texPath>Things/Pawn/Mechanoid/Scrap_Bug/Light/ScrapbugLight</texPath>
            </conditionalGraphics>
            <baseLayer>3</baseLayer>
